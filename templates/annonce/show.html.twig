{% extends 'templatebackoffice/index.html.twig' %}


{% block title %}Annonce Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-dark mb-4" style="font-size: 2.5rem; font-weight: 700;">Annonce Details</h1>

    <div class="card shadow-sm p-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="w-25">ID</th>
                    <td>{{ annonce.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ annonce.titre }}</td>
                </tr>
                <tr>
                    <th>Poids</th>
                    <td>{{ annonce.poids }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ annonce.prix }} â‚¬</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ annonce.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td class="text-center">
                        {% if annonce.image %}
                            <img src="{{ asset('uploads/' ~ annonce.image) }}" alt="{{ annonce.titre }}" class="img-thumbnail" style="width: 150px; height: auto;">
                        {% else %}
                            <span class="text-secondary">No Image Available</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_templatebackoffice', { 'page': 'shop-management' }) }}" class="btn btn-secondary">Back to List</a>

        <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-warning">Edit</a>
        {{ include('annonce/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
