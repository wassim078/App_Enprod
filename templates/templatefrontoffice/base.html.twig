<script>
document.addEventListener('DOMContentLoaded', function() {
  const dropdownTrigger = document.getElementById('profileDropdownTrigger');
  const dropdownMenu = document.getElementById('profileDropdown');

  if (dropdownTrigger && dropdownMenu) {
    // Toggle dropdown on click
    dropdownTrigger.addEventListener('click', function(e) {
      e.stopPropagation();
      dropdownMenu.classList.toggle('show');
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
      if (!dropdownTrigger.contains(e.target)) {
        dropdownMenu.classList.remove('show');
      }
    });
  }
});

document.querySelectorAll('.add-to-cart').forEach(button => {
  button.addEventListener('click', async (e) => {
    e.preventDefault();
    const form = button.closest('form');

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      });

      if (response.ok) {
        const cartCounter = document.querySelector('.cart-counter');
        const currentCount = parseInt(cartCounter.textContent);
        cartCounter.textContent = currentCount + 1;

        // Optional: Show flash message
        const flash = document.createElement('div');
        flash.className = 'alert alert-success position-fixed top-0 end-0 m-3';
        flash.textContent = 'Item added to cart!';
        document.body.appendChild(flash);

        setTimeout(() => flash.remove(), 3000);
      }
    } catch (error) {
      console.error('Error:', error);
    }
  });
});



</script>
