{% extends 'templatebackoffice/shop-management.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded">
                    <div class="card-header text-white text-center py-3" style="background-color: #1D6F42;">
                        <h3 class="mb-0">Create New Category</h3>
                    </div>
                    <div class="card-body">
                        <!-- Start of Form -->
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control shadow-sm rounded-pill', 'placeholder': 'Enter category name'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">Create Category</button>
                        </div>

                        {{ form_end(form) }}
                        <!-- End of Form -->
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('app_templatebackoffice', { 'page': 'shop-management' }) }}" class="btn btn-link text-decoration-none" style="color: #1D6F42; font-weight: bold;">
                        Back to Category List
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block styles %}
    <style>
        /* Button Hover Effects */
        .btn:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

        /* Input Focus Effects */
        .form-control:focus, .form-select:focus {
            border-color: #1D6F42;
            box-shadow: 0 0 5px rgba(29, 111, 66, 0.5);
        }

        /* Card Styling */
        .card {
            border-radius: 1rem;
            border: 1px solid #1D6F42;
        }
    </style>
{% endblock %}
