{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h1 class="card-title mb-0">Panier</h1>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Titre</th>
                                <th scope="col">Poids</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Description</th>
                                <th scope="col">Image</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for panier in paniers %}
                            <tr>
                                <td>{{ panier.annonce.id }}</td>
                                <td>{{ panier.annonce.titre }}</td>
                                <td>{{ panier.annonce.poids }}</td>
                                <td>{{ panier.annonce.prix }}</td>
                                <td>{{ panier.annonce.description }}</td>
                                <td>
                                    {% if panier.annonce.image %}
                                        <img src="{{ asset('uploads/images/' ~ panier.annonce.image) }}" alt="{{ panier.annonce.titre }}" class="img-thumbnail" style="max-width: 100px;">
                                    {% else %}
                                        <span class="text-muted">No image</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_panier_delete', {'id': panier.id}) }}" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Remove
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}