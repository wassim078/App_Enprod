<div class="form-group">
    {{ form_label(form.titre) }}
    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.titre) }}
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_label(form.prix) }}
        <div class="input-group">
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            <div class="input-group-append">
                <span class="input-group-text">TND</span>
            </div>
        </div>
        {{ form_errors(form.prix) }}
    </div>

    <div class="form-group col-md-6">
        {{ form_label(form.quantite) }}
        {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.quantite) }}
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_label(form.poids) }}
        <div class="input-group">
            {{ form_widget(form.poids, {'attr': {'class': 'form-control'}}) }}
            <div class="input-group-append">
                <span class="input-group-text">kg</span>
            </div>
        </div>
        {{ form_errors(form.poids) }}
    </div>

    <div class="form-group col-md-6">
        {{ form_label(form.categorieAnnonce) }}
        {{ form_widget(form.categorieAnnonce, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.categorieAnnonce) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
    {{ form_errors(form.description) }}
</div>

<div class="form-group">
    {{ form_label(form.imageFile) }}
    {% if annonce.image %}
        <div class="current-image mb-3">
            <img src="{{ asset('uploads/' ~ annonce.image) }}"
                 class="img-thumbnail"
                 style="max-height: 200px"
                 alt="Current image">
            <small class="form-text text-muted">Current image</small>
        </div>
    {% endif %}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
    {{ form_errors(form.imageFile) }}
    <small class="form-text text-muted">Upload new image to replace existing one</small>
</div>