{% extends 'templatefrontoffice/base.html.twig' %}

{% block title %}Create New Annonce{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-header text-white text-center py-4" style="background-color: #1D6F42;">
                        <h3 class="mb-0">Create New Annonce</h3>
                    </div>
                    <div class="card-body p-5">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-4">
                            <label for="titre" class="form-label fw-bold text-muted">Title of Annonce</label>
                            {{ form_widget(form.titre, {
                                'attr': {
                                    'class': 'form-control rounded-3 shadow-sm ' ~ (form.titre.vars.errors|length > 0 ? 'is-invalid' : ''),
                                    'placeholder': 'Enter the title of the annonce'
                                }
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.titre) }}</div>
                        </div>

                        <div class="mb-4">
                            <label for="prix" class="form-label fw-bold text-muted">Price</label>
                            {{ form_widget(form.prix, {
                                'attr': {
                                    'class': 'form-control rounded-3 shadow-sm ' ~ (form.prix.vars.errors|length > 0 ? 'is-invalid' : ''),
                                    'placeholder': 'Enter the price'
                                }
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.prix) }}</div>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label fw-bold text-muted">Description</label>
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control rounded-3 shadow-sm ' ~ (form.description.vars.errors|length > 0 ? 'is-invalid' : ''),
                                    'placeholder': 'Provide a detailed description'
                                }
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.description) }}</div>
                        </div>

                        <div class="mb-4">
                            <label for="poids" class="form-label fw-bold text-muted">Weight (kg)</label>
                            {{ form_widget(form.poids, {
                                'attr': {
                                    'class': 'form-control rounded-3 shadow-sm ' ~ (form.poids.vars.errors|length > 0 ? 'is-invalid' : ''),
                                    'placeholder': 'Enter weight in kg'
                                }
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.poids) }}</div>
                        </div>

                        <div class="mb-4">
                            <label for="imageFile" class="form-label fw-bold text-muted">Upload Image</label>
                            {{ form_widget(form.imageFile, {
                                'attr': {
                                    'class': 'form-control-file shadow-sm ' ~ (form.imageFile.vars.errors|length > 0 ? 'is-invalid' : '')
                                }
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.imageFile) }}</div>
                        </div>

                        <div class="mb-4">
                            <label for="category" class="form-label fw-bold text-muted">Category</label>
                            {{ form_widget(form.category, {
                                'attr': {
                                    'class': 'form-select rounded-3 shadow-sm ' ~ (form.category.vars.errors|length > 0 ? 'is-invalid' : '')
                                }
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.category) }}</div>
                        </div>

                        <button type="submit" class="btn btn-lg w-100 py-2 rounded-3 text-white" style="background-color: #1D6F42; transition: 0.3s; border: none;">
                            Save Annonce
                        </button>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="text-center mt-3">
                    <a href="{{ path('app_annonce_index_front') }}" class="btn btn-link text-decoration-none" style="color: #1D6F42; font-weight: bold;">
                        Back to Annonce List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Hover Effects for Buttons */
        .btn:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

        /* Input Focus Effects */
        .form-control:focus, .form-select:focus {
            border-color: #1D6F42;
            box-shadow: 0 0 5px rgba(29, 111, 66, 0.5);
        }

        /* Card Styling */
        .card {
            border-radius: 1.2rem;
            border: 1px solid #ddd;
        }

        /* Form Inputs */
        .form-control, .form-select {
            border-radius: 0.75rem;
        }

        /* Button styling */
        .btn {
            border-radius: 0.75rem;
            font-size: 1.1rem;
            padding: 12px;
        }

        /* Text and link styling */
        .text-muted {
            color: #6c757d !important;
        }
    </style>
{% endblock %}
