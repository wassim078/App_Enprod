{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}

    <style>
        /* Global Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 900px;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            text-align: center;
            box-sizing: border-box;
        }

        /* Title and Header */
        h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 30px;
            font-weight: 600;
        }

        /* Form styling */
        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        input, textarea {
            padding: 15px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin: 5px 0;
            transition: border-color 0.3s ease;
        }

        input:focus, textarea:focus {
            border-color: #007bff;
            outline: none;
        }

        textarea {
            resize: vertical;
            min-height: 150px;
        }

        /* Button container for actions */
        .button-container {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .btn-update {
            background-color: #28a745;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 50px;
            font-weight: bold;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-update:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        .btn-cancel {
            background-color: #dc3545;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 50px;
            font-weight: bold;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background-color: #c82333;
            transform: scale(1.05);
        }

        /* Delete form section */
        .delete-form {
            margin-top: 20px;
            font-size: 1.2rem;
        }
        
        /* Responsive Styles */
        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .container {
                padding: 20px;
            }
        }
    </style>

    <div class="container">
        <h1>Edit Post</h1>

        <!-- Form to edit post -->
        {{ include('templatefrontoffice/post/_form.html.twig', {'button_label': 'Update'}) }}

        <!-- Buttons for navigation and actions -->
        <div class="button-container">
            <a href="{{ path('app_post_index') }}" class="btn btn-light btn-cancel">Back to List</a>
            <a href="{{ path('app_post_index') }}" class="btn btn-light btn-update">Update</a>
        </div>

        <!-- Delete Form -->
        <div class="delete-form">
            {{ include('templatefrontoffice/post/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
