{% extends 'base.html.twig' %}

{% block active %}
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto">
            <li class="nav-item">
                <a class="nav-link" href="/templatefrontoffice">HOME </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/templatefrontoffice/annonce">SHOP</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/templatefrontoffice/collecte">COLLECT</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/templatefrontoffice/forum">FORUM</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/templatefrontoffice/reclamation">RECLAMATION</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block body %}
    <title>CategorieForum</title>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 40px;
        }

        .card-deck {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            width: 300px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
            background-color: #fff;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card-header {
            background-color: #28a745;
            color: white;
            padding: 15px;
            font-size: 1.2em;
            font-weight: bold;
            text-align: center;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.1em;
            color: #333;
            margin-bottom: 15px;
        }

        .card-text {
            color: #666;
            font-size: 0.95em;
            margin-bottom: 20px;
        }

        .btn-enter {
            display: inline-block;
            padding: 8px 20px;
            color: white;
            background-color: #28a745;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
            transition: background-color 0.3s;
            text-align: center;
            width: 100%;
        }

        .btn-enter:hover {
            background-color: #218838;
        }

        .image-container {
            text-align: center;
            margin-top: 30px;
        }

        .image-container img {
            max-width: 100%;
            height: auto;
        }
    </style>

    <div class="container">
        <h1>Categorie Forum</h1>
        <div class="card-deck">
            {% for categorie_forum in categorie_forums %}
                <div class="card">
                    <div class="card-header">
                        Forum - {{ categorie_forum.name }}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ categorie_forum.name }}</h5>
                        <p class="card-text">{{ categorie_forum.description }}</p>
                        <a href="{{ path('app_forum_show', {'id': categorie_forum.id}) }}" class="btn-enter">Enter Forum</a>
                    </div>
                </div>
            {% else %}
                <div class="card" style="width: 100%; text-align: center;">
                    <div class="card-body">
                        <p>No forums available at the moment.</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="image-container">
            <img src="{{ asset('frontoffice/images/image.png') }}" alt="Image illustrative">
        </div>
    </div>
{% endblock %}
