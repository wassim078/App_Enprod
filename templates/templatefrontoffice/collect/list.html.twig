{# templates/collect/list.html.tig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .collect-item {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        .collect-item.active {
            border-color: #28a745;
            box-shadow: 0 0.5rem 1rem rgba(40, 167, 69, 0.15);
        }
        .collect-details {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    {# ... existing header ... #}

    <div class="row g-4">
        {% for category_name, collects in grouped_collects %}
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">{{ category_name|upper }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            {% for collect in collects %}
                                <div class="col">
                                    <div class="card h-100 collect-item" 
                                         onclick="toggleCollectDetails('{{ collect.id }}')"
                                         data-collect-id="{{ collect.id }}">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ collect.titre }}</h5>
                                            <div class="collect-details" id="details-{{ collect.id }}">
                                                <hr>
                                                <p class="mb-1">
                                                    <strong>Quantity:</strong> {{ collect.quantite }}<br>
                                                    <strong>Product:</strong> {{ collect.nomProduit }}<br>
                                                    <strong>Location:</strong> {{ collect.lieu }}<br>
                                                    <strong>Date:</strong> {{ collect.dateDebut|date('d M Y, H:i') }}<br>
                                                    <strong>Category:</strong> {{ collect.categorieCollect.nom }}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function toggleCollectDetails(id) {
            const element = document.querySelector(`[data-collect-id="${id}"]`);
            const details = document.getElementById(`details-${id}`);
            
            // Toggle active class
            element.classList.toggle('active');
            
            // Toggle details visibility
            if (details.style.maxHeight) {
                details.style.maxHeight = null;
            } else {
                // Close other open items
                document.querySelectorAll('.collect-item.active').forEach(item => {
                    if (item.dataset.collectId !== id) {
                        item.classList.remove('active');
                        document.getElementById(`details-${item.dataset.collectId}`).style.maxHeight = null;
                    }
                });
                
                // Open clicked item
                details.style.maxHeight = details.scrollHeight + "px";
            }
        }
    </script>
{% endblock %}