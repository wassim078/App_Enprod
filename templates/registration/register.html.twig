{% extends 'templatefrontoffice/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
  <!-- Add custom styles for the registration form and background image -->
  <style>
    /* Full-page background image */
    body {
      background-image: url('{{ asset('backoffice/images/backgrounds/background-login-register.jpg') }}'); /* Replace with your image path */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed; /* Ensures the background stays fixed while scrolling */
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Form container */
    .registration-container {
      max-width: 600px;
      width: 30%;
      padding: 20px;
      background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .registration-container h1 {
      text-align: center;
      color: #28a745; /* Green color */
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      font-weight: bold;
      color: #28a745; /* Green color */
    }

    .form-control {
      border-radius: 5px;
      border: 1px solid #ced4da;
      padding: 10px;
    }

    .form-control:focus {
      border-color: #28a745; /* Green color */
      box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    .btn-register {
      background-color: #28a745; /* Green color */
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      width: 100%;
    }

    .btn-register:hover {
      background-color: #218838; /* Darker green */
    }

    .alert-danger {
      background-color: #f8d7da;
      border-color: #f5c6cb;
      color: #721c24;
      padding: 10px;
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .form-check-label {
      color: #28a745; /* Green color */
    }
  </style>
{% endblock %}




{% block header %}{% endblock %}





{% block body %}
  <div class="registration-container">
    {% for flash_error in app.flashes('verify_email_error') %}
      <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm, { 'attr': { 'class': 'registration-form' ,'novalidate':'novalidate'} }) }}
      <div class="form-group">
        {{ form_label(registrationForm.email, 'Email', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control' } }) }}
        <small class="text-danger">{{ form_errors(registrationForm.email) }}</small>
      </div>

      <div class="form-group">
        {{ form_label(registrationForm.plainPassword, 'Password', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control' } }) }}
        <small class="text-danger">{{ form_errors(registrationForm.plainPassword) }}</small>
      </div>


        <div class="form-group">
        {{ form_label(registrationForm.adresse, 'Address', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(registrationForm.adresse, { 'attr': { 'class': 'form-control' } }) }}
        <small class="text-danger">{{ form_errors(registrationForm.adresse) }}</small>
      </div>

        <div class="form-group">
        {{ form_label(registrationForm.telephone, 'Phone Number', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(registrationForm.telephone, { 'attr': { 'class': 'form-control' } }) }}
        <small class="text-danger">{{ form_errors(registrationForm.telephone) }}</small>
      </div>


      <div class="form-group">
        {{ form_label(registrationForm.role, 'Role', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(registrationForm.role) }}
        <small class="text-danger">{{ form_errors(registrationForm.role) }}</small>
      </div>

      
      <div class="form-group">
        {{ form_label(registrationForm.image, 'Picture', { 'label_attr': { 'class': 'form-label' } }) }}
        {{ form_widget(registrationForm.image) }}
        <small class="text-danger">{{ form_errors(registrationForm.image) }}</small>
      </div>



      <div class="form-group form-check">
        {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
        {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', { 'label_attr': { 'class': 'form-check-label' } }) }}
        <small class="text-danger">{{ form_errors(registrationForm.agreeTerms) }}</small>
      </div>



      


      <button type="submit" class="btn btn-register">Register</button>
    {{ form_end(registrationForm) }}

 <p> Do you already have an email? <a href="{{ path('app_login') }}">click here to login </a>  </p>



  </div>
{% endblock %}

{% block footer %}{% endblock %}