{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
  <!-- Add custom styles for the login form and background image -->
  <style>
    /* Full-page background image */
    body {
      background-image: url('{{ asset('backoffice/images/backgrounds/background-login-register.jpg') }}'); /* Replace with your image path */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed; /* Ensures the background stays fixed while scrolling */
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Form container */
    .login-container {
      max-width: 600px;
      width: 30%;
      padding: 20px;
      background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-container h1 {
      text-align: center;
      color: #28a745; /* Green color */
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      font-weight: bold;
      color: #28a745; /* Green color */
    }

    .form-control {
      border-radius: 5px;
      border: 1px solid #ced4da;
      padding: 10px;
      width: 100%;
    }

    .form-control:focus {
      border-color: #28a745; /* Green color */
      box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    .btn-login {
      background-color: #28a745; /* Green color */
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      width: 100%;
    }

    .btn-login:hover {
      background-color: #218838; /* Darker green */
    }

    .alert-danger {
      background-color: #f8d7da;
      border-color: #f5c6cb;
      color: #721c24;
      padding: 10px;
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .form-check-label {
      color: #28a745; /* Green color */
    }
  </style>
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
  <div class="login-container">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}

    <h1>Log in</h1>

    <form method="post">
      <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
      </div>

      <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div class="form-group form-check">
        <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
        <label for="rememberMe" class="form-check-label">Remember me</label>
      </div>

      <button type="submit" class="btn btn-login">Sign in</button>
    </form>

    <p class="mt-3">Don't have an account? <a href="{{ path('app_register') }}">Register here</a></p>
  </div>
{% endblock %}

{% block footer %}{% endblock %}