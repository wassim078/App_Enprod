{% extends 'templatebackoffice/base.html.twig' %}

{% block title %}Edit Collect{% endblock %}

{% block content %}
    <div style="max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; display: flex; flex-direction: column; align-items: center;">
        <h1 style="font-size: 2.5rem; font-weight: 800; color: #1f2937; margin-bottom: 2rem; text-align: center; border-bottom: 4px solid #16a34a; padding-bottom: 0.75rem;">Edit Collect</h1>

        <!-- Debug: Test Font Awesome -->
        <i class="fas fa-user" style="font-size: 24px; color: #16a34a; margin-bottom: 1rem;"></i>

        <div style="background: linear-gradient(white, #f0fdf4); border: 2px solid transparent; border-radius: 1rem; padding: 2rem; width: 100%; max-width: 32rem; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); background: linear-gradient(white, #f0fdf4) padding-box, linear-gradient(45deg, #16a34a, #4ade80) border-box;">
            {{ form_start(form, {'attr': {'style': 'display: flex; flex-direction: column; gap: 1.5rem;'}}) }}
            <div>
                {{ form_label(form.titre, null, {'label_attr': {'style': 'display: block; font-size: 0.875rem; font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;'}}) }}
                {{ form_widget(form.titre, {'attr': {'style': 'margin-top: 0.25rem; width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); font-size: 0.875rem; transition: border-color 0.2s;'}}) }}
                {{ form_errors(form.titre, {'attr': {'style': 'color: #dc2626; font-size: 0.75rem; margin-top: 0.25rem;'}}) }}
                <style>
                    input[name="collect[titre]"]:focus { border-color: #16a34a; outline: none; box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2); }
                </style>
            </div>
            <div>
                {{ form_label(form.nomProduit, null, {'label_attr': {'style': 'display: block; font-size: 0.875rem; font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;'}}) }}
                {{ form_widget(form.nomProduit, {'attr': {'style': 'margin-top: 0.25rem; width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); font-size: 0.875rem; transition: border-color 0.2s;'}}) }}
                {{ form_errors(form.nomProduit, {'attr': {'style': 'color: #dc2626; font-size: 0.75rem; margin-top: 0.25rem;'}}) }}
                <style>
                    input[name="collect[nomProduit]"]:focus { border-color: #16a34a; outline: none; box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2); }
                </style>
            </div>
            <div>
                {{ form_label(form.quantite, null, {'label_attr': {'style': 'display: block; font-size: 0.875rem; font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;'}}) }}
                {{ form_widget(form.quantite, {'attr': {'style': 'margin-top: 0.25rem; width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); font-size: 0.875rem; transition: border-color 0.2s;'}}) }}
                {{ form_errors(form.quantite, {'attr': {'style': 'color: #dc2626; font-size: 0.75rem; margin-top: 0.25rem;'}}) }}
                <style>
                    input[name="collect[quantite]"]:focus { border-color: #16a34a; outline: none; box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2); }
                </style>
            </div>
            <div>
                {{ form_label(form.lieu, null, {'label_attr': {'style': 'display: block; font-size: 0.875rem; font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;'}}) }}
                {{ form_widget(form.lieu, {'attr': {'style': 'margin-top: 0.25rem; width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); font-size: 0.875rem; transition: border-color 0.2s;'}}) }}
                {{ form_errors(form.lieu, {'attr': {'style': 'color: #dc2626; font-size: 0.75rem; margin-top: 0.25rem;'}}) }}
                <style>
                    input[name="collect[lieu]"]:focus { border-color: #16a34a; outline: none; box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2); }
                </style>
            </div>
            <div>
                {{ form_label(form.dateDebut, null, {'label_attr': {'style': 'display: block; font-size: 0.875rem; font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;'}}) }}
                {{ form_widget(form.dateDebut, {'attr': {'style': 'margin-top: 0.25rem; width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); font-size: 0.875rem; transition: border-color 0.2s;'}}) }}
                {{ form_errors(form.dateDebut, {'attr': {'style': 'color: #dc2626; font-size: 0.75rem; margin-top: 0.25rem;'}}) }}
                <style>
                    input[name="collect[dateDebut]"]:focus { border-color: #16a34a; outline: none; box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2); }
                </style>
            </div>
            <div>
                {{ form_label(form.categorieCollect, null, {'label_attr': {'style': 'display: block; font-size: 0.875rem; font-weight: 600; color: #1f2937; margin-bottom: 0.25rem;'}}) }}
                {{ form_widget(form.categorieCollect, {'attr': {'style': 'margin-top: 0.25rem; width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.375rem; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05); font-size: 0.875rem; transition: border-color 0.2s;'}}) }}
                {{ form_errors(form.categorieCollect, {'attr': {'style': 'color: #dc2626; font-size: 0.75rem; margin-top: 0.25rem;'}}) }}
                <style>
                    select[name="collect[categorieCollect]"]:focus { border-color: #16a34a; outline: none; box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2); }
                </style>
            </div>
            <div style="display: flex; justify-content: center; gap: 1rem; margin-top: 1.5rem;">
                <button type="submit"
                        style="display: inline-flex; align-items: center; padding: 0.5rem 1rem; border: none; font-size: 0.875rem; font-weight: 500; color: white; background-color: #16a34a; border-radius: 0.375rem; transition: background-color 0.2s; cursor: pointer;">
                    <i class="fas fa-save" style="margin-right: 0.5rem;"></i> {{ button_label|default('Update') }}
                </button>
                <a href="{{ path('admin_collect_management') }}"
                   style="display: inline-flex; align-items: center; padding: 0.5rem 1rem; border: 1px solid #16a34a; font-size: 0.875rem; font-weight: 500; color: #16a34a; background-color: #f0fdf4; border-radius: 0.375rem; text-decoration: none; transition: background-color 0.2s;">
                    <i class="fas fa-times" style="margin-right: 0.5rem;"></i> Cancel
                </a>
                <style>
                    button[type="submit"]:hover { background-color: #15803d; }
                    a[href="{{ path('admin_collect_management') }}"]:hover { background-color: #dcfce7; }
                </style>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}