{% extends 'templatebackoffice/index.html.twig' %}

{% block title %}User{% endblock %}



{% block active %}
    <li class="sidebar-item">
        <a class="sidebar-link" href="/templatebackoffice" aria-expanded="false">
            <span><i class="ti ti-layout-dashboard"></i></span>
            <span class="hide-menu">Home</span>
        </a>
    </li>
    <li class="sidebar-item">
        <a class="sidebar-link" href="/templatebackoffice/user-management" style="background-color: #379226" aria-expanded="false">
            <span><i class="ti ti-user"></i></span>
            <span class="hide-menu">User Management</span>
        </a>
    </li>
    <li class="sidebar-item">
        <a class="sidebar-link" href="/templatebackoffice/shop-management" aria-expanded="false">
            <span><i class="ti ti-recycle"></i></span>
            <span class="hide-menu">Shop Management</span>
        </a>
    </li>
    <li class="sidebar-item">
        <a class="sidebar-link" href="/templatebackoffice/collect-management" aria-expanded="false">
            <span><i class="ti ti-map-pin"></i></span>
            <span class="hide-menu">Collect Management</span>
        </a>
    </li>
    <li class="sidebar-item">
        <a class="sidebar-link" href="/templatebackoffice/forum-management" aria-expanded="false">
            <span><i class="ti ti-message-circle"></i></span>
            <span class="hide-menu">Forum Management</span>
        </a>
    </li>
{% endblock %}






{% block body %}
    <div class="container" style="max-width: 800px; margin: 40px auto; padding: 20px; background-color: #f8fff8; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        <h1 style="color: #2c5f2d; border-bottom: 3px solid #2c5f2d; padding-bottom: 10px; margin-bottom: 30px;">
            <i class="fas fa-user" style="margin-right: 10px;"></i>
            User Profile
        </h1>
            {# User Image #}


        <div style="text-align: center; margin-bottom: 30px;">
        <img src="{{ asset(user.image ? 'frontoffice/images/' ~ user.image : 'frontoffice/images/default.jpg') }}" 
         alt="User Image" 
         style="width: 200px; 
                height: 200px; 
                border-radius: 50%; 
                border: 5px solid #97bc62;
                object-fit: cover;
                box-shadow: 0 0 15px rgba(0,0,0,0.2);">
        </div>

        <table class="table" style="border: 2px solid #97bc62; border-collapse: collapse;">
            <tbody>
                <tr style="background-color: #e9f5e9;">
                    <th style="padding: 15px; border: 1px solid #97bc62; color: #2c5f2d;">Email</th>
                    <td style="padding: 15px; border: 1px solid #97bc62;">{{ user.email }}</td>
                </tr>
                <tr>
                    <th style="padding: 15px; border: 1px solid #97bc62; color: #2c5f2d;">Roles</th>
                    <td style="padding: 15px; border: 1px solid #97bc62;">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                </tr>
                <tr style="background-color: #e9f5e9;">
                    <th style="padding: 15px; border: 1px solid #97bc62; color: #2c5f2d;">Address</th>
                    <td style="padding: 15px; border: 1px solid #97bc62;">{{ user.adresse }}</td>
                </tr>
                <tr>
                    <th style="padding: 15px; border: 1px solid #97bc62; color: #2c5f2d;">Phone</th>
                    <td style="padding: 15px; border: 1px solid #97bc62;">{{ user.telephone }}</td>
                </tr>
            </tbody>
        </table>

        <div style="margin-top: 30px; display: flex; gap: 15px; justify-content: center;">
            <a href="{{ path('admin_user_management') }}" 
               style="text-decoration: none;
                      padding: 10px 20px;
                      background-color: #97bc62;
                      color: white;
                      border-radius: 5px;
                      transition: all 0.3s ease;">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>

            <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
               style="text-decoration: none;
                      padding: 10px 20px;
                      background-color: #2c5f2d;
                      color: white;
                      border-radius: 5px;
                      transition: all 0.3s ease;">
                <i class="fas fa-edit"></i> Edit Profile
            </a>
        </div>

        <div style="margin-top: 20px; text-align: center;">
            {{ include('templatebackoffice/user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
<style>
.container {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.fas {
    margin-right: 8px;
}

.table th {
    font-weight: 600;
}

a:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}


</style>


{% endblock %}