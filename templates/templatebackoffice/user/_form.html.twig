
{# templatebackoffice/user/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="form-container" style="max-width: 800px; margin: 0 auto; padding: 30px; background-color: #f8fff8; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        

        <div class="row g-4">
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(field, null, {
                                'label_attr': {
                                    'class': 'form-label fw-bold',
                                    'style': 'color: #2c5f2d;'
                                }
                            }) }}
                            {{ form_widget(field, {
                                'attr': {
                                    'class': 'form-control border-success',
                                    'style': 'border: 2px solid #97bc62;'
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(field) }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div class="d-flex justify-content-between align-items-center mt-5">
            <button class="btn btn-success btn-lg" type="submit" style="background-color: #379226; border: none; padding: 10px 30px;">
                <i class="fas fa-save me-2"></i>{{ button_label|default('Save') }}
            </button>
            
            <a href="{{ path('admin_user_management') }}" class="btn btn-outline-success" style="border-color: #379226; color: #379226;">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
{{ form_end(form) }}

<style>
    .form-control:focus {
        border-color: #97bc62;
        box-shadow: 0 0 0 0.25rem rgba(151, 188, 98, 0.25);
    }
    
    .invalid-feedback {
        color: #dc3545;
        font-size: 0.9em;
    }
    
    .form-container {
        transition: all 0.3s ease;
    }
    
    .btn-success:hover {
        background-color: #2d7b1f !important;
    }
</style>