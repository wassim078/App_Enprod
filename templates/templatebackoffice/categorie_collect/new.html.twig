{% extends 'templatebackoffice/base.html.twig' %}

{% block title %}New Collect Category{% endblock %}

{% block content %}
    <div style="max-width: 1200px; margin: 0 auto; padding: 2rem 1rem;">
        <h1 style="font-size: 2rem; margin-bottom: 2rem; color: #1f2937;">
            <i class="fas fa-plus-circle"></i>
            Create New Collect Category
        </h1>

        <div style="background: white; padding: 2rem; border-radius: 0.5rem; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            {{ form_start(form) }}
            <div style="margin-bottom: 1.5rem;">
                {{ form_label(form.nom, 'Category Name', {'label_attr': {'style': 'display: block; margin-bottom: 0.5rem; font-weight: 600;'}}) }}
                {{ form_widget(form.nom, {'attr': {'style': 'width: 100%; padding: 0.75rem; border: 1px solid #e5e7eb; border-radius: 0.375rem;'}}) }}
            </div>

            <div style="margin-bottom: 1.5rem;">
                {{ form_label(form.description, 'Description', {'label_attr': {'style': 'display: block; margin-bottom: 0.5rem; font-weight: 600;'}}) }}
                {{ form_widget(form.description, {'attr': {'style': 'width: 100%; padding: 0.75rem; border: 1px solid #e5e7eb; border-radius: 0.375rem; height: 120px;'}}) }}
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="submit"
                        style="padding: 0.75rem 1.5rem;
                               background-color: #16a34a;
                               color: white;
                               border: none;
                               border-radius: 0.375rem;
                               cursor: pointer;
                               transition: background-color 0.2s;">
                    <i class="fas fa-save"></i> Create Category
                </button>
                <a href="{{ path('admin_category_collect') }}"
                   style="padding: 0.75rem 1.5rem;
                          background-color: #6b7280;
                          color: white;
                          text-decoration: none;
                          border-radius: 0.375rem;
                          transition: background-color 0.2s;">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        button[type="submit"]:hover { background-color: #15803d; }
        a:hover { background-color: #4b5563; }
    </style>
{% endblock %}