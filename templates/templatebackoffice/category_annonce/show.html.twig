{% extends 'templatebackoffice/index.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center py-3" style="background-color: #1D6F42;">
                    <h3 class="mb-0">Category Details</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="w-25">ID</th>
                                <td>{{ category.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ category.name }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_templatebackoffice', { 'page': 'shop-management' }) }}" class="btn btn-secondary shadow-sm">Back to List</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning shadow-sm">Edit</a>
                       {{ include('category/_delete_form.html.twig', { 'button_class': 'btn btn-danger shadow-sm' }) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Button Hover Effects */
    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    /* Input Focus Effects */
    .table th {
        background-color: #f8f9fa;
    }

    /* Card Styling */
    .card {
        border-radius: 1rem;
        border: 1px solid #1D6F42;
    }
</style>
{% endblock %}
