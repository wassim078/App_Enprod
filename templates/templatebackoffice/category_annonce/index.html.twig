{% block title %}Category Index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-dark mb-4" style="font-size: 2.5rem; font-weight: 700;">Category Index</h1>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_category_new') }}" class="btn btn-success">Create New Category</a>
        </div>
    </div>
{% endblock %}
