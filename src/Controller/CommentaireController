<?php

namespace App\Controller;

use App\Entity\Commentaire;
use App\Repository\PostRepository;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\Routing\Annotation\Route;

class CommentaireController extends AbstractController
{
    #[Route('/post/{id}/comment', name: 'app_comment_create', methods: ['POST'])]
    public function createComment(Request $request, PostRepository $postRepository, EntityManagerInterface $em, $id)
    {
        $post = $postRepository->find($id);

        if (!$post) {
            throw $this->createNotFoundException('Post not found');
        }

        // Créer le commentaire
        $commentaire = new Commentaire();
        $commentaire->setPost($post);
        $commentaire->setUser($this->getUser()); // Utilisateur connecté
        $commentaire->setContent($request->request->get('content'));
        $commentaire->setCreatedAt(new \DateTime());
        $commentaire->setUpdatedAt(new \DateTime());

        $em->persist($commentaire);
        $em->flush();

        $this->addFlash('success', 'Commentaire ajouté avec succès.');

        return $this->redirectToRoute('app_post_show', ['id' => $post->getId()]);
    }
}
